<html lang="en">

<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="create-blog content">
        <form action="/blogs" method="post"> <%# action attribute = value where we want to send a request %>
          <label for="title">Blog title:</label>
          <input type="text" id="title" name="title" required> <%# name = attach it to the body of post request %>
          <label for="snippet">Blog snippet:</label>
          <input type="text" id="snippet" name="snippet" required>
          <label for="body">Blog body:</label>
          <textarea id="body" name="body" required></textarea>
          <button>Submit</button> <%# sends post request to /blogs url %>
        </form>
      </div>
      <%- include('./partials/footer.ejs') %>
</body>

</html>
